@model SpatialRPGServer.ViewModels.HomeViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>

    <title>Spatial RPG Server</title>
</head>

<body>
    <h1>Server Information</h1>
    <div>
        Server Version @Model.ServerVersion
    </div>

    <h3>Users</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Id</td>
                <td>Username</td>
                <td>Party</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.Party.ToString()</td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Encounters</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Id</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var encounter in Model.Encounters)
            {
                <tr>
                    <td>@encounter.Id</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Battles</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Id</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var battle in Model.Battles)
            {
                <tr>
                    <td>@battle.Id</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html> 